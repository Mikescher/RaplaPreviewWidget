<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="RaVi_LabelTheme" parent="AppBaseTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RaVi_MainLabelTheme" parent="RaVi_LabelTheme">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="RaVi_SubLabelTheme" parent="RaVi_LabelTheme">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="RaVi_SideLabelTheme" parent="RaVi_LabelTheme">
        <item name="android:textSize">10dp</item>
    </style>

</resources>
